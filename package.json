{
  "name": "reef-rebuilders",
  "version": "1.0.0",
  "description": "reef conector",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olsoa4/reef-rebuilders.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.5.0",
    "css-loader": "^1.0.0",
    "nodemon": "^1.11.0",
    "style-loader": "^0.22.1"
  },
  "bugs": {
    "url": "https://github.com/olsoa4/reef-rebuilders/issues"
  },
  "homepage": "https://github.com/olsoa4/reef-rebuilders#readme",
  "dependencies": {
    "@material-ui/core": "^3.6.0",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "firebase": "^5.7.1",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.1",
    "uuid": "^3.3.2"
  }
